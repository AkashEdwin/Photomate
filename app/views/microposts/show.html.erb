<% provide(:title, @micropost.user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h4>
        <% @user=@micropost.user %>
        <%= gravatar_for @user %>
        <%=link_to @user.name, @user %>
      </h4>
    </section>
  </aside>
</div>
<div class="row2">
   <h4>
      <%= @micropost.content %>
   </h4>
   <%= image_tag (@micropost.picture.url if @micropost.picture?) ,:size => "500x500" ,:align => "middle" %>
</div>
<br>
<span class="row-4">
  <aside>
  <%= render 'comments/comment' %>
    </aside>
</span>
