<% if micropost.privat == "1" %>
  <%-# For display private posts only to user and followers -%>
    <% if current_user?(micropost.user) || current_user.following?(@user) %>
    <li id="micropost-<%= micropost.id %>">
      <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
      <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
      <span class="content"><%= micropost.content %><%= image_tag micropost.picture.url if micropost.picture? %></span>
      <% @micropost=micropost %>
      <% if !current_user.liked? @micropost %>
        <%= link_to 'Vote', like_micropost_path(@micropost), method: :post %>
      <% else %>
        <%= link_to 'Down vote', like_micropost_path(@micropost), method: :post %>
      <% end %>
      <%= micropost.cached_votes_total%>
      <span class="timestamp">
       Posted <%= link_to time_ago_in_words(micropost.created_at),micropost %> ago.
        <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, method: :delete,
                    data: { confirm: "You sure?" } %>
        <% end %>
      </span>
    </li>
  <% end %>
<% else %>
  <li id="micropost-<%= micropost.id %>">
    <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content"><%= micropost.content %><%= image_tag micropost.picture.url if micropost.picture? %></span>
    <% @micropost=micropost %>
    <% if !current_user.liked? @micropost %>
      <%= link_to 'Vote', like_micropost_path(@micropost), method: :post %>
    <% else %>
      <%= link_to 'Down vote', like_micropost_path(@micropost), method: :post %>
    <% end %>
    <%= micropost.cached_votes_total%>
    <span class="timestamp">
     Posted <%= link_to time_ago_in_words(micropost.created_at),micropost %> ago.
      <% if current_user?(micropost.user) %>
        <%= link_to "delete", micropost, method: :delete,
                    data: { confirm: "You sure?" } %>
        <% end %>
      </span>
  </li>
<% end %>

